	"item": [
		{
			"name": "Health",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{docsmanager_url}}/health",
							"host": [
								"{{docsmanager_url}}"
							],
							"path": [
								"health"
							]
						},
						"description": "Check if DocsManager service is healthy"
					},
					"response": []
				}
			]
		},
		{
			"name": "Documents",
			"item": [
				{
					"name": "Upload Document",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": [],
									"description": "Document file to upload (PDF, TXT, DOCX, MD)"
								},
								{
									"key": "title",
									"value": "My Document Title",
									"type": "text",
									"description": "Optional: Document title"
								},
								{
									"key": "description",
									"value": "Document description",
									"type": "text",
									"description": "Optional: Document description"
								}
							]
						},
						"url": {
							"raw": "{{docsmanager_url}}/api/v1/documents/upload",
							"host": [
								"{{docsmanager_url}}"
							],
							"path": [
								"api",
								"v1",
								"documents",
								"upload"
							]
						},
						"description": "Upload a document to MinIO and trigger processing"
					},
					"response": []
				},
				{
					"name": "List Documents",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{docsmanager_url}}/api/v1/documents?skip=0&limit=10",
							"host": [
								"{{docsmanager_url}}"
							],
							"path": [
								"api",
								"v1",
								"documents"
							],
							"query": [
								{
									"key": "skip",
									"value": "0",
									"description": "Number of records to skip (pagination)"
								},
								{
									"key": "limit",
									"value": "10",
									"description": "Maximum number of records to return"
								}
							]
						},
						"description": "Get a list of all uploaded documents"
					},
					"response": []
				},
				{
