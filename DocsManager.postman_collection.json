					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{docsmanager_url}}/api/v1/documents/:document_id",
							"host": [
								"{{docsmanager_url}}"
							],
							"path": [
								"api",
								"v1",
								"documents",
								":document_id"
							],
							"variable": [
								{
									"key": "document_id",
									"value": "123e4567-e89b-12d3-a456-426614174000",
									"description": "UUID of the document"
								}
							]
						},
						"description": "Get details of a specific document by its UUID"
					},
					"response": []
				},
				{
					"name": "Delete Document",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{docsmanager_url}}/api/v1/documents/:document_id",
							"host": [
								"{{docsmanager_url}}"
							],
							"path": [
								"api",
								"v1",
								"documents",
								":document_id"
							],
							"variable": [
								{
									"key": "document_id",
									"value": "123e4567-e89b-12d3-a456-426614174000",
									"description": "UUID of the document to delete"
								}
							]
						},
						"description": "Delete a document from the system (MinIO and database)"
					},
					"response": []
				},
				{
					"name": "Download Document",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{docsmanager_url}}/api/v1/documents/:document_id/download",
							"host": [
								"{{docsmanager_url}}"
							],
							"path": [
								"api",
								"v1",
								"documents",
								":document_id",
								"download"
							],
							"variable": [
								{
									"key": "document_id",
									"value": "123e4567-e89b-12d3-a456-426614174000",
